<%- include('./partials/header.ejs') %>
<div class="py-4" style="background-color: aliceblue;min-height: 100vh;">
  <section class="container">
    <div class=" py-5">
      <div class="row">
        <div class="col-lg-4">
          <div class="card mb-4">
            <div class="card-body text-center">
              <img src="<%= user.avater ? user.avater : '/images/user.png' %>" alt="avatar" class="border rounded-circle img-fluid p-3" style="width: 150px;">
              <h5 class="my-3 mt-4"><%= user.name %></h5>
              <div class="d-flex justify-content-center mb-2">
                <button type="button" class="btn btn-outline-primary ms-1"><%= user.student_id %></button>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-8">
          <div class="card mb-4">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Full Name</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= user.name %></p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Gender</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= user.gender %></p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Date of birth</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= user.dob.toDateString() %></p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Student ID</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= user.student_id %></p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Address</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= user.address %></p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Registerd on</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= user.created_at.toDateString() %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
</section>
</div>
<%- include('./partials/footer.ejs') %>